  "version": "0.2.0",
  "configurations": [
    { "name": "All", "request": "launch", "type": "dart", "program": "example/file_ext_example.dart",
      "args": [ "-s", "./*.yaml", "../parse_args/**.dart" ]},
    { "name": "All + hidden", "request": "launch", "type": "dart", "program": "example/file_ext_example.dart",
      "args": [ "-a" ]},
    { "name": "All dirs & sub-dirs of abs", "request": "launch", "type": "dart", "program": "example/file_ext_example.dart",
      "args": [ "/bin/X11/**" ]},
    { "name": "All files except docos", "request": "launch", "type": "dart", "program": "example/file_ext_example.dart",
      "args": [ "-f", "-n", "*.{md,yml,yaml}" ]},
    { "name": "Dart (recursive)", "request": "launch", "type": "dart", "program": "example/file_ext_example.dart",
      "args": [ "-f", "**.dart" ]},
    { "name": "Dart or Yaml (recursive)", "request": "launch", "type": "dart", "program": "example/file_ext_example.dart",
      "args": [ "-f", "**.{dart,yaml}" ]}
  ]
}